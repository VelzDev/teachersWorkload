@page "{id:int}"
@model EditModel

<h2>Редактировать информацию о преподавателе</h2>

<form method="post" class="form-group">
    <div class="mb-3">
        <label for="LastName" class="form-label">Фамилия</label>
        <input type="text" id="LastName" name="LastName" class="form-control" value="@Model.Teacher.LastName" required />
    </div>

    <div class="mb-3">
        <label for="FirstName" class="form-label">Имя</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" value="@Model.Teacher.FirstName" required />
    </div>

    <div class="mb-3">
        <label for="Patronymic" class="form-label">Отчество</label>
        <input type="text" id="Patronymic" name="Patronymic" class="form-control" value="@Model.Teacher.Patronymic" required />
    </div>

    <div class="mb-3">
        <label for="Experience" class="form-label">Стаж работы</label>
        <input type="number" id="Experience" name="Experience" class="form-control" value="@Model.Teacher.Experience" required />
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a href="/Teachers/Index" class="btn btn-secondary">Отмена</a>
</form>
