@page "{id:int}"
@model DeleteModel

<h2>Удалить группу</h2>

<p>Вы действительно хотите удалить группу: <strong>@Model.Group.GroupNumber</strong>?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Да, удалить</button>
    <a href="/Groups/Index" class="btn btn-secondary">Отмена</a>
</form>
