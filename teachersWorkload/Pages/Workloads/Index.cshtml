@page
@model IndexModel

<h2>Нагрузки</h2>

<!-- Добавляем таблицу с Bootstrap -->
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Преподаватель</th>
            <th>Предмет</th>
            <th>Группа</th>
            <th>Лекции (часов)</th>
            <th>Практики (часов)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var workload in Model.Workloads)
        {
            <tr>
                <td>@workload.Teacher.LastName @workload.Teacher.FirstName @workload.Teacher.Patronymic</td>
                <td>@workload.Subject.Name</td>
                <td>@workload.Group.GroupNumber</td>
                <td>@workload.Subject.LectureHours</td> <!-- Подгружаем лекционные часы -->
                <td>@workload.Subject.PracticalHours</td> <!-- Подгружаем практические часы -->
                <td>
                    <!-- Кнопки редактирования и удаления -->
                    <a href="/Workloads/Edit/@workload.Id" class="btn btn-primary btn-sm mx-1">Изменить</a> |
                    <a href="/Workloads/Delete/@workload.Id" class="btn btn-danger btn-sm mx-1">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Ссылка для добавления новой нагрузки -->
<a href="/Workloads/Create" class="btn btn-success btn-lg">Добавить нагрузку</a>
