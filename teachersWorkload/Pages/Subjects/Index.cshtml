@page
@model IndexModel

<h2>Предметы</h2>

<!-- Добавляем таблицу с Bootstrap -->
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Название предмета</th>
            <th>Лекционные часы</th>
            <th>Практические часы</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model.Subjects)
        {
                <tr>
                    <td>@subject.Name</td>
                    <td>@subject.LectureHours</td>
                    <td>@subject.PracticalHours</td>
                    <td>
                        <!-- Кнопки редактирования и удаления -->
                        <a href="/Subjects/Edit/@subject.Id" class="btn btn-primary btn-sm mx-1">Изменить</a> |
                        <a href="/Subjects/Delete/@subject.Id" class="btn btn-danger btn-sm mx-1">Удалить</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<!-- Ссылка для добавления нового предмета -->
<a href="/Subjects/Create" class="btn btn-success btn-lg">Добавить новый предмет</a>
