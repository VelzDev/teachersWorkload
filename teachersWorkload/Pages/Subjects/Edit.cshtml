@page "{id:int}"
@model EditModel

<h2>Редактировать предмет</h2>

<form method="post" class="form-group">
    <div class="mb-3">
        <label for="Name" class="form-label">Название предмета</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Subject.Name" required />
    </div>

    <div class="mb-3">
        <label for="LectureHours" class="form-label">Лекционные часы</label>
        <input type="number" id="LectureHours" name="LectureHours" class="form-control" value="@Model.Subject.LectureHours" required />
    </div>

    <div class="mb-3">
        <label for="PracticalHours" class="form-label">Практические часы</label>
        <input type="number" id="PracticalHours" name="PracticalHours" class="form-control" value="@Model.Subject.PracticalHours" required />
    </div>

    <button type="submit" class="btn btn-success">Сохранить изменения</button>
    <a href="/Subjects/Index" class="btn btn-secondary">Отмена</a>
</form>